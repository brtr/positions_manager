<div class="mt-3">
  <canvas id="revenueChart" style="height: 300px; width: 100%" data-data="<%= @chart_data.to_json %>" ></canvas>
</div>

<script>
document.addEventListener('turbolinks:load', () => {
  var canvas = document.getElementById('revenueChart');
  if(canvas){
    var ctx = canvas.getContext('2d');
    var chart_data = JSON.parse(ctx.canvas.dataset.data)
    const result = Object.values(chart_data)
    var myChart = new Chart(ctx, {
      type: 'line',
      data: {
        labels: Object.keys(chart_data),
        datasets: [
          {
            label: "绝对收益走势图(每天)",
            data: result.map(i => {
              return i.revenue_data
            }),
            tension: 0.4,
            backgroundColor: 'rgb(255, 99, 132)',
            yAxisID: 'y'
          },
          {
            label: "新增仓位走势图(每天)",
            data: result.map(i => {
              return i.position_amount
            }),
            tension: 0.4,
            backgroundColor: 'rgb(54, 162, 235)',
            type: 'bar',
            yAxisID: 'y1'
          },
        ],
      },
      options: {
        scales: {
          x: {
            grid: {
              display: false,
            }
          },
          y: {
            position: 'left',
            ticks: {
              maxTicksLimit: 5
            },
          },
          y1: {
            position: 'right',
            ticks: {
              maxTicksLimit: 5
            },
          }
        },
        responsive: false
      }
    });
  }
})
</script>