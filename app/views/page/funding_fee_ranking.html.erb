<div class="m-3">
  <h3>
    资金费率排行榜
    <%= link_to "Refresh", refresh_funding_fee_list_path, class: 'btn btn-warning' %>
  </h3>
  <div class="row mt-3">
    <div class="col-6">
      <table class="table">
        <thead>
          <tr class="table-container-tr">
            <th>币种</th>
            <th>资金费率</th>
            <th>更新时间</th>
          </tr>
        </thead>
        <tbody>
          <% @data.reverse.first(10).each do |d| %>
            <tr>
              <td><%= d['symbol'] %></td>
              <td><%= (d['fundingRate'].to_f * 100).round(4) %>%</td>
              <td><%= Time.at(d['fundingTime']/1000).utc %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
