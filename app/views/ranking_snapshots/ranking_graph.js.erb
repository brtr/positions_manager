$('#ranking-modal-block').html("<%= j render partial: "modal", locals: { data: @data, symbol: @symbol } %>");
$('#rankingModal').modal('show');


var canvas = document.getElementById('priceChart');
if(canvas){
  var ctx = canvas.getContext('2d');
  var chart_data = JSON.parse(ctx.canvas.dataset.data)
  const result = Object.values(chart_data)
  var myChart = new Chart(ctx, {
    type: 'line',
    data: {
      labels: Object.keys(chart_data),
      datasets: [
        {
          label: "<%= @symbol %>币种涨跌走势图(每天)",
          data: result.map(i => {
            return i.rate
          }),
          tension: 0.4,
          backgroundColor: 'rgb(255, 99, 132)',
          yAxisID: 'y'
        },
        {
          label: "是否进入涨幅前10(每天)",
          data: result.map(i => {
            return i.is_top10
          }),
          tension: 0.4,
          backgroundColor: 'rgb(54, 162, 235)',
          type: 'bar',
          yAxisID: 'y1'
        },
        {
          label: "新增仓位平均成本价(每天)",
          data: result.map(i => {
            return i.price
          }),
          tension: 0.4,
          backgroundColor: 'rgb(54, 162, 35)',
          type: 'line',
          yAxisID: 'y',
          order: 1
        },
      ],
    },
    options: {
      scales: {
        x: {
          grid: {
            display: false,
          }
        },
        y: {
          position: 'left',
          ticks: {
            maxTicksLimit: 5
          },
        },
        y1: {
          position: 'right',
          ticks: {
            maxTicksLimit: 1
          },
        }
      },
      responsive: false,
      plugins: {
        tooltip: {
          callbacks: {
            label: function(context) {
              return ''
            },
            footer: function(context) {
              data = result.filter(function(x) {return x.date == context[0].label})
              chart_type = context[0].dataset.type
              console.log(context[0])

              if (context[0].dataset.type == 'line') {
                if(data.length > 0){
                  i = data[0]
                  price = "成本价: " + i.price
                  qty = "数量: " + i.qty
                  return [price, qty]
                } else {
                  return context.label
                }
              } else {
                if(data.length > 0){
                  i = data[0]
                  roi = "涨跌: " + i.rate + "%"
                  return [roi]
                } else {
                  return context.label
                }
              }
            }
          }
        }
      }
    }
  });
}