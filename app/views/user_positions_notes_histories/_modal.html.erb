<!-- Modal -->

<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="importModalLabel">编辑备注</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <%= form_for @note do |f| %>
        <div class="modal-body">
          <div class="form-group">
            <label for="recipient-name" class="control-label">备注:</label>
            <%= f.text_area :notes, class: "form-control" %>
          </div>
          <%= hidden_field_tag :position_detail, params[:position_detail] %>
          <%= hidden_field_tag :user_position_id, @record.id %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">取消</button>
          <%= f.submit "确定", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
