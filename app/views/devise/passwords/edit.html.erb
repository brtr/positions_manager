<h2 class="text-center m-5">修改你的密码</h2>

<div class="col-8 offset-2 col-sm-6 offset-sm-3">
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.label :password, "新密码" %><br />
    <% if @minimum_password_length %>
      <em>(最少<%= @minimum_password_length %>位)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "新密码", class: 'form-control m-2' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "确认新密码" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "新密码", class: 'form-control m-2' %>
  </div>

  <div class="actions">
    <%= f.submit "修改我的密码", class: 'btn btn-primary m-2' %>
  </div>
<% end %>
<hr>
<%= render "devise/shared/links" %>
</section>